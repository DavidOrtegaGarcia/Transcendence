server {
	listen 443 ssl;

	server_name transcendence.42.fr;

	root /var/www/transcendence;
	index index.html;

	ssl_certificate /etc/ssl/certs/transcendence.crt;
	ssl_certificate_key /etc/ssl/private/transcendence.key;	
	
	ssl_protocols TLSv1.3;

	location / {
		try_files $uri $uri/ =404;
	}
	location /adminer {
        #
		proxy_pass https://adminer:8080/;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Ajustes de cookies para que el login funcione en la subruta
        proxy_cookie_path / /adminer;
        
        # Aumentar tiempo de espera para consultas pesadas
        proxy_read_timeout 300;
	}

}